<%= turbo_frame_tag 'home' do %>

    <%= form_with url: products_path, method: :get do |form| %>
        <%= form.text_field :query_text, placeholder: t('.query_text'), onChange: 'this.form.requestSubmit()', value: params[:query_text], class: 'w-full my-2 rounded-2xl border-gray-200' %>

        <div class='flex'>
            <%= form.number_field :min_price, placeholder: t('.min_price'), onChange: 'this.form.requestSubmit()', value: params[:min_price], class: 'w-1/3 rounded-2xl border-gray-200' %> <!-- Con value hacemos que el parametro se quede en la caja y no cambie al hacer la peticion -->
            <%= form.number_field :max_price, placeholder: t('.max_price'), onChange: 'this.form.requestSubmit()', value: params[:max_price], class: 'w-1/3 rounded-2xl border-gray-200 mx-2' %>

            <%= form.select :order_by, options_for_select([[t('.newest'), 'newest'], [t('.expensive'), 'expensive'], [t('.cheapest'), 'cheapest']], params[:order_by]), {}, { onChange: 'this.form.requestSubmit()', class: 'w-1/3 rounded-2xl border-gray-200 text-gray-500' } %> <!-- El options_for_select tiene varias formas de pasar los valores, consultalas en la documentacion -->
        </div>
    <% end %>

    <div class='flex overflow-x-scroll gap-2 my-4'>
        <%= link_to t('.all'), products_path, class: 'bg-white text-gray-600 px-4 py-2 rounded-2xl drop-shadow-sm hover:bg-gray-300' %>

        <%= render partial: 'shared/category', collection: @categories %>
    </div>

    <%= turbo_frame_tag :products, class: 'flex flex-col m-2' do %>
        <%= turbo_frame_tag "products-#{@pagy.page}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap sm:gap-x-2' do %> <!-- CUIDADO: hay que usar las comillas dobles -->
            <%= render partial: 'shared/product', collection: @products %> <!-- En el partial ponemos lo que habia dentro del bucle, y esto ya genera el bucle automaticamente con collection -->
            <%= turbo_frame_tag "products-#{@pagy.next}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap sm:gap-x-2', src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next %> <!-- Hacemos la paginacion infinita. Con el if, nos evitamos la ultima peticion a una pagina que no existe -->
        <% end %>
    <% end %>
    
<% end %>